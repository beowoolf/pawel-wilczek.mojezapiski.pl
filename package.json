{
  "name": "pawel-wilczek.mojezapiski.pl",
  "version": "1.0.0",
  "description": "Wizytówka internetowa Pawła Wilczka",
  "author": "Paweł Wilczek",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider nuxt build",
    "build:prod": "cross-env nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint:style": "stylelint \"**/*.{css,scss,sass,html,vue}\" --ignore-path .gitignore",
    "lint:prettier": "prettier --check .",
    "lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
    "lintfix": "prettier --write --list-different . && yarn lint:js --fix && yarn lint:style --fix",
    "prepare": "husky install",
    "test": "jest",
    "ci:basic": "yarn && yarn lint && yarn test",
    "ci": "yarn ci:basic && yarn build -m -t"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --cache",
    "*.{css,scss,sass,html,vue}": "stylelint",
    "*.**": "prettier --check --ignore-unknown"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxt/content": "^1.15.1",
    "@nuxt/image": "^0.7.2",
    "@nuxtjs/axios": "^5.13.6",
    "@nuxtjs/google-gtag": "^1.0.4",
    "@nuxtjs/proxy": "^2.1.0",
    "@nuxtjs/pwa": "^3.3.5",
    "@nuxtjs/sitemap": "^2.4.0",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "cookie-universal-nuxt": "^2.2.2",
    "cross-env": "^10.1.0",
    "nuxt": "^2.18.1",
    "nuxt-jsonld": "^1.5.8"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.4",
    "@nuxtjs/color-mode": "2",
    "@nuxtjs/eslint-config": "^12.0.0",
    "@nuxtjs/eslint-module": "^4.1.0",
    "@nuxtjs/google-fonts": "^3.2.0",
    "@nuxtjs/stylelint-module": "^5.2.1",
    "@vue/test-utils": "^1.3.6",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^30.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-vue": "^9.33.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.2.3",
    "nuxt-compress": "^5.0.0",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "stylelint": "15.11.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^35.0.0",
    "vue-jest": "^3.0.4"
  }
}
